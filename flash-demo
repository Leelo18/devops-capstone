from flask import Flask
app = Flask(__name__)

@app.route("/")
def hello():
    return "Hello from Flask on Kubernetes!"

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)

Flask==3.1.2

FROM python:3.11-slim
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY app.py .
EXPOSE 5000
CMD ["python","app.py"]
